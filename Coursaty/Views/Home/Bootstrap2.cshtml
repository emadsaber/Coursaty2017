
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bootstrap2</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body>
    <!--Buttons-->
    <div class="well"> 
        <h3>Buttons</h3>
        <button class="btn btn-default btn-lg">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-default btn-lg
        </button>
        <button class="btn btn-primary btn-md">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-primary btn-md
        </button>
        <button class="btn btn-success btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-primary btn-sm
        </button>
        <button class="btn btn-danger btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-danger btn-sm
        </button>
        <button class="btn btn-info btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-info btn-sm
        </button>
        <button class="btn btn-link btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-link btn-sm
        </button>
        <button class="btn btn-toolbar btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-toolbar btn-sm
        </button>
        <button class="btn btn-warning btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-warning btn-sm
        </button>
        <button class="btn btn-xs">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-xs
        </button>
        <button class="btn btn-block btn-sm">
            <i class="glyphicon glyphicon-align-right"></i> btn btn-block btn-sm
        </button>
    </div>
    <!--DropDowns-->
    <div class="well">
        <h3>Dropdowns</h3>
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Show/Hide Menu<span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">Link 1</a></li>
                <li class="divider" role="separator"></li>
                <li class="disabled"><a href="#">Link 2</a></li>
                <li class="divider" role="separator"></li>
                <li><a href="#">Link 3</a></li>
            </ul>
        </div>

        <div class="dropup" style="position:relative">
            <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                Show the menu up <i class="caret"></i>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">Link 1</a></li>
                <li><a href="#">Link 2</a></li>
                <li><a href="#">Link 3</a></li>
            </ul>
        </div>
    </div>
    <!--Button Groups-->
    <div class="well">
        <h3>Button Groups</h3>
        Large
        <div class="btn-group btn-group-lg" >
            <button class="btn btn-success">Left</button>
            <button class="btn btn-primary">Center</button>
            <button class="btn btn-warning">Right</button>
        </div>
        Normal
        <div class="btn-group">
            <button class="btn btn-success">Left</button>
            <button class="btn btn-primary">Center</button>
            <button class="btn btn-warning">Right</button>
        </div>
        Small
        <div class="btn-group btn-group-sm">
            <button class="btn btn-success">Left</button>
            <button class="btn btn-primary">Center</button>
            <button class="btn btn-warning">Right</button>
        </div>
        Extra Small
        <div class="btn-group btn-group-xs">
            <button class="btn btn-success">Left</button>
            <button class="btn btn-primary">Center</button>
            <button class="btn btn-warning">Right</button>
        </div>
        <h5>Button Toolbar</h5>
        <div class="btn-toolbar">
            <div class="btn-group btn-group-lg">
                <button class="btn btn-success">1</button>
                <button class="btn btn-default">2</button>
                <button class="btn btn-default">3</button>
            </div>
            <div class="btn-group btn-group-lg">
                <button class="btn btn-default">4</button>
                <button class="btn btn-default">5</button>
                <button class="btn btn-default">6</button>
            </div>
            <div class="btn-group btn-group-lg">
                <button class="btn btn-default">7</button>
                <button class="btn btn-default">8</button>
                <button class="btn btn-default">9</button>
                <button class="btn btn-default">10</button>
            </div>
            <div class="btn-group btn-group-lg">
                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    More... <i class="caret"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">11</a></li>
                    <li><a href="#">12</a></li>
                    <li><a href="#">13</a></li>
                    <li><a href="#">14</a></li>
                </ul>
            </div>
        </div>
        <h5>Vertical menu</h5>
        <div class="btn-group-vertical">
            <button class="btn btn-default">Item 1</button>
            <button class="btn btn-default">Item 2</button>
            <button class="btn btn-default">Item 3</button>
            <button class="btn btn-default">Item 4</button>
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Dropdown Item <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Item5</a></li>
                    <li><a href="#">Item6</a></li>
                    <li><a href="#">Item7</a></li>
                </ul>
            </div>
            <button class="btn btn-default">Item 8</button>
        </div>
    </div>
    <!--Input Groups-->
    <div class="well">
        <h3>Input groups</h3>
        You may need to modify file Site.css to display input-group-addon properly
        <div class="input-group" style="width:300px;">
            <span class="input-group-addon">http://</span>
            <input type="text" class="form-control" placeholder="exmaple"/>
        </div>
        &nbsp; or &nbsp;
        <div class="input-group" style="width:400px;">
            <span class="input-group-addon">
                <input type="checkbox" checked ="checked" class="checkbox" />
            </span>
            <input type="text" class="form-control" placeholder="john.smith" />
            <span class="input-group-addon">@@gmail.com</span>
            <span class="input-group-btn">
                <button class="btn btn-danger" ><i class="glyphicon glyphicon-send"></i> Send</button>
            </span>
        </div>
        or
        <div class="input-group" style="width:400px;">
            <div class="input-group-btn">
                <button class="btn btn-default"><i class="glyphicon glyphicon-bold"></i></button>
                <button class="btn btn-default"><i class="glyphicon glyphicon-italic"></i></button>
            </div>
            <input type="text" class="form-control" />
        </div>
    </div>
    <!--Nav-->
    <div class="well">
        <h3>Nav</h3>
        <h4>Nav Tabs</h4>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">Articles</a></li>
            <li><a href="#">Courses</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <h4>Nav Pills</h4>
        <ul class="nav nav-pills">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">Articles</a></li>
            <li><a href="#">Courses</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <h4>Nav Pills Stacked</h4>
        <ul class="nav nav-pills nav-stacked" style="width:120px;">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">Articles</a></li>
            <li><a href="#">Courses</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <h4>Nav Justified</h4>
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">Articles</a></li>
            <li><a href="#">Courses</a></li>
            <li class="disabled"><a href="#">Contact</a></li>
        </ul>
        
    </div>
    <div class="well">
        <h3>Navbar</h3>
        <nav class="nav navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <div class="navbar-brand">
                        <span class="text-primary">My Brand</span>
                    </div>
                </div>
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#">Products</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                    <button class="btn btn-default navbar-btn">Button</button>
                    <span class="navbar-text">Sample Text</span>
                    <a class="navbar-link" href="#">Sample <link href="#" rel="stylesheet" /></a>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Login</a></li>
                        <li><a href="#">Sign Up</a></li>
                    </ul>
            </div>
        </nav>
    </div>
</body>
</html>
